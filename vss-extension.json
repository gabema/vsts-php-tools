{
    "manifestVersion": 1,
    "id": "php-tools-gabema",
    "name": "PHP Tools for VSTS",
    "version": "1.2.0",
    "publisher": "GabeMartinER",
    "description": "PHP for VSTS! Install and run PHP and Composer.",
    "public": false,
    "galleryFlags": [
        "Preview"
    ],
    "icons": {
        "default": "images/Icon64.png",
        "large": "images/Icon512.png"
    },
    "categories": [
        "Build and release"
    ],
    "tags": [
        "php",
        "composer"
    ],
    "links": {
        "getstarted": {
            "uri": "https://github.com/gabema/vsts-php-tools"
        },
        "issues": {
            "uri": "https://github.com/gabema/vsts-php-tools/issues"
        },
        "repository": {
            "uri": "https://github.com/gabema/vsts-php-tools"
        }
	},
    "branding": {
        "color": "#8892BF",
        "theme": "light"
    },	
    "content": {
        "details": {
            "path": "README.md"
        },
        "license": {
            "path": "LICENSE"
        }
    },
    "files": [
      {
        "path": "install-php"
      },
      {
        "path": "composer"
      },
      {
        "path": "php-command"
      },
      {
        "path": "images",
        "addressable": true
      },
      {
        "path": "ps_modules/VstsTaskSdk",
        "packagePath": "install-php/ps_modules/VstsTaskSdk",
        "contentType": "text/plain"
      },
      {
        "path": "ps_modules/VstsTaskSdk",
        "packagePath": "composer/ps_modules/VstsTaskSdk",
        "contentType": "text/plain"
      },
      {
        "path": "ps_modules/VstsTaskSdk",
        "packagePath": "php-command/ps_modules/VstsTaskSdk",
        "contentType": "text/plain"
      }
    ],
    "scopes": [
        "vso.build_execute",
        "vso.test_write"
    ],
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "contributions": [
        {
            "id": "install-php",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "install-php"
            }
        },
        {
            "id": "composer",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "composer"
            }
        },
        {
            "id": "php-command",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "php-command"
            }
        }
    ]
}
